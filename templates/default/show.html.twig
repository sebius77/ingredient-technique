{# templates/default/show.html.twig #}

{% extends('base.html.twig') %}

{% block title %}Notion{% endblock %}

{% block body %}
    <div class="container bg-light shadow p-3">
        <div class="row">
            <div class="col-md-8">
                <h4>{{ concept.title }} </h4>
            </div>
            <div class="col-md-4">
                <span class="badge badge-primary">Crée le {{ concept.createdAt|date('d/m/Y') }}</span>
                <span class="badge badge-success">Mis à jour le {{ concept.updatedAt|date('d/m/Y') }}</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                {{ concept.description }}
            </div>
            <div class="col-md-4">
                {{ concept.theme.title }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ concept.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}