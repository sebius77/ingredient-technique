<form method="post" action="{{ path('concept_delete', {'id': concept.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cette notion ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ concept.id) }}">
    <button class="btn"><i class="far fa-trash-alt"></i></button>
</form>
