{% extends 'base.html.twig' %}

{% block title %}Menu phrase{% endblock %}

{% block body %}
    <div class="container" style="margin-top:60px;">
        <h1>Liste des phrases</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Content</th>
                    <th>Author</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for sentence in sentences %}
                <tr>
                    <td>{{ sentence.id }}</td>
                    <td>{{ sentence.content }}</td>
                    <td>{{ sentence.Author }}</td>
                    <td>
                        <a href="{{ path('sentence_show', {'id': sentence.id}) }}">show</a>
                        <a href="{{ path('sentence_edit', {'id': sentence.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('sentence_new') }}">Create new</a>
    </div>  
{% endblock %}
