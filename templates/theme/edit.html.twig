{# templates/theme/add.html.twig #}

{% extends('base.html.twig') %}

{% block body %}
    <div class="wrapper">

        <div><h4>Edition d'un thème</h4></div>
        {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.description) }}
                {{ form_row(form.color) }}
                {{ form_row(form.textColor) }}
                {{ form_row(form.submit, {"label": "Mettre à jour") }}
        {{ form_end(form) }}
    </div>
{% endblock %}
